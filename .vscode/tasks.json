{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "main.cpp",
                "-o",
                "main",
                "-pedantic-errors",
                "-Wall",
                "-Weffc++",
                "-Wextra",
                "-Wsign-conversion",
                "-Werror",
                "-Wno-unknown-pragmas",  // Error when not using OpenMP
                "-std=c++17",
                // "-O3",
                // "-march=native",
                // "-fopenmp",
                // "-lblas",
                // "-llapack",

            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}